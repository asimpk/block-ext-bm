{
  "name": "M'Wallet Blueprint Typescript",
  "version": "1.0.0",
  "description": "Your First Crypto Wallet Extension Typescript",
  "manifest_version": 3,
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"]
    }
 ],
  "background": {
    "matches": ["http://*/*", "https://*/*"],
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Open Wallet"
  },
  "permissions": ["storage", "tabs", "scripting"]
}